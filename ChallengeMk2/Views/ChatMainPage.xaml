<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ChallengeMk2.Views.ChatMainPage"
			 NavigationPage.HasBackButton="False">

	<StackLayout Orientation="Vertical" Spacing="0">

		<StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
			<Image>
				<Image.Source>
					<FontImageSource Glyph="{StaticResource Chat}" FontFamily="fas"/>
				</Image.Source>
			</Image>
			<Label Text="{Binding Title}"
			       FontSize="Large"
			       FontAttributes="None"
			       TextColor="{DynamicResource MainTextColor}"/>
		</StackLayout>

		<StackLayout Margin="0,40,0,0" Padding="20" Spacing="10">
			
			<Label Text="Public chat :" FontSize="Large" HorizontalOptions="Center"
				   TextColor="{DynamicResource EconomyColor}"/>

			<CollectionView ItemsSource="{Binding PublicMessages}">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<StackLayout Margin="0,0,0,15">
							<Label Text="{Binding SenderName, StringFormat='{0} says :'}"
								   TextColor="{DynamicResource EconomyColor}"
								   FontSize="Small"
								   FontAttributes="Italic"/>
							<Label Text="{Binding Content}"
								   TextColor="{DynamicResource MainTextColor}"/>
						</StackLayout>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
			
			<Frame HeightRequest="50" CornerRadius="25" BackgroundColor="{DynamicResource MainTextColor}"
				   Padding="15,0,15,0">
				<Entry Text="{Binding EntryPublicMessage}" Placeholder="Type your message"
					   ClearButtonVisibility="WhileEditing">
					<Entry.Behaviors>
						<prism:EventToCommandBehavior EventName="Completed" Command="{Binding SendPublicMessageCommand}"/>
					</Entry.Behaviors>
				</Entry>
			</Frame>

			<BoxView BackgroundColor="Transparent" HeightRequest="20"/>

		</StackLayout>
		
	</StackLayout>

</ContentPage>